---
import "@/styles/global.css";
import Footer from "@/components/Footer.astro";

interface Props {
  pageTitle: string;
  lang: string;
}

const { pageTitle, lang } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link
      rel="icon"
      type="image/png"
      href="https://wam.global/favicon/favicon-32x32.png"
    />
    <meta property="og:title" content="%%title%%" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="%%description%%" />
    <title>%%title%%</title>
    <link
      rel="stylesheet"
      href="https://go.pardot.com/l/876061/2025-08-24/qqkrt/876061/1756073789bkYMrqg5/styles.css"
    />
  </head>
  <body class="bg-main-black">
    <main>
      <slot />
    </main>
    <Footer />

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        let currentIndex = 1;
        const carousel: HTMLDivElement = document.querySelector("#carousel")!;

        setInterval(() => {
          carousel.style.transform = `translateX(calc(50vw - 40vw - ${currentIndex} * 80vw))`;
          currentIndex = (currentIndex + 1) % 3;
        }, 4000);
      });
    </script>
  </body>
</html>
