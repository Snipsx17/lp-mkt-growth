---
import "./styles/global.css";

interface Props {
  pageTitle: string;
  lang: string;
}

const { pageTitle, lang } = Astro.props;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/png"
      href="https://wam.global/favicon/favicon-32x32.png"
    />
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
  </head>
  <body class="bg-main-black">
    <main>
      <slot />
    </main>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        let currentIndex = 1;
        const carousel: HTMLDivElement = document.querySelector("#carousel")!;

        setInterval(() => {
          carousel.style.transform = `translateX(calc(50vw - 40vw - ${currentIndex} * 80vw))`;
          currentIndex = (currentIndex + 1) % 3;
        }, 4000);
      });
    </script>
  </body>
</html>
